{
  "env": {
    "browser": true,
    "es6": true,
    "amd": true
  },
  "extends": [
    "standard",
    "plugin:vue/recommended",
    "plugin:prettier/recommended",
    "prettier/standard",
    "prettier/vue",
    "plugin:jest/recommended",
    "plugin:vuejs-accessibility/recommended"
  ],
  "parserOptions": {
    "parser": "babel-eslint",
    "sourceType": "module"
  },
  "rules": {
    "require-await": "warn"
  },
  "globals": {
    "require": false,
    "requirejs": false
  },
  "plugins": [
    "jest",
    "vuejs-accessibility"
  ]
}
