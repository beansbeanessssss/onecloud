{
  "js": {
    "parsers": [
      {
        "expression": "$gettext",
        "arguments": {
          "text": 0
        }
      },
      {
        "expression": "$ngettext",
        "arguments": {
          "text": 0,
          "textPlural": 1
        }
      },
      {
        "expression": "$pgettext",
        "arguments": {
          "context": 0,
          "text": 1
        }
      }
    ],
    "glob": {
      "pattern": "{../src/**/*.ts,../src/**/*.js}"
    }
  },
  "output": "template.script.pot"

}
